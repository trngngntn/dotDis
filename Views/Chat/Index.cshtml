@{
    ViewData["Title"] = "dotDis";
}
@section head
{
    <script src="js/class.js"></script>
    <script src="js/webSocket.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <script src="https://kit.fontawesome.com/6e774c561d.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400&display=swap" rel="stylesheet">
}
<script type="text/javascript">window.onload = init(@ViewData["uid"])</script>
<nav>
     <div id="list-friend">
         @foreach (User user in (List<User>)ViewData["Friend"])
         {
             <div class="friend" id="@user.ID" onclick="setChatUser(@user.ID)">
                <!--img class="avatar" src="img/avatar.png"></img-->
                <div>@user.Name</div>
                <span id="status-user-@user.ID">Offline</span>
             </div>
         }
     </div>
     <div id="list-room">

     </div>
</nav>
<main>
    <textarea id="field-mesg-input"></textarea>
    <br />
    <button id="button-send" onclick="sendMesg()">Send</button>
    <br />
    <div id="mesg-output">
        <p> Received Messages :</p>
    </div>
</main>